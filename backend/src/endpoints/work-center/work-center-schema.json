{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://industry-fusion.org/types/v0.1/workCenter",
    "title": "Work Center",
    "description": "Work center floor template for Fusion App",
    "type": "object",
    "properties": {
        "floor_name": {
            "type": "string",
            "title": "Floor Name",
            "description": "Name of the floor"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "Short description for the floor"
        },
        "type_of_floor": {
            "type": "array",
            "title": "Floor Type",
            "description": "Type of Floor",
            "enum": [
                    "Production",
                    "Pre-Prodcution",
                    "Storage and Warehousing",
                    "Quality Control",
                    "Maintenance Area"
                    ]
        },
        "thumbnail": {
            "type": "object",
            "title": "Thumbnail",
            "contentEncoding": "base64",
            "contentMediaType": "image/png",
            "description": "Photo of the floor"
        },
        "hasAsset": {
            "relationship": "https://industry-fusion.org/types/v0.1/*"
        }
    }
}